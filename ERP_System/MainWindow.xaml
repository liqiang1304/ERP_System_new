<Window x:Class="ERP_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="UsernnameLabel" Content="用户名：" HorizontalAlignment="Left" Margin="120,113,0,0" VerticalAlignment="Top"/>
        <Label x:Name="PasswordLabel" Content="密码：" HorizontalAlignment="Left" Margin="120,180,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="23" Margin="230,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TabIndex="1"/>
        <Button x:Name="LoginButton" Content="登陆" HorizontalAlignment="Left" Margin="145,270,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click" TabIndex="3"/>
        <Button x:Name="ExitButton" Content="退出" HorizontalAlignment="Left" Margin="303,270,0,0" VerticalAlignment="Top" Width="75" Click="ExitButton_Click" TabIndex="4"/>
        <PasswordBox x:Name="Password_Box" HorizontalAlignment="Left" Margin="230,183,0,0" VerticalAlignment="Top" Height="23" Width="120" TabIndex="2" KeyDown="Password_Box_KeyDown_1"/>

    </Grid>
</Window>
